<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDENTITY SETUP (1/2)"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/neon_lime"
            android:textSize="28sp"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/white_text"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>
        
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/card_surface"
            app:boxStrokeColor="@color/neon_lime"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            android:textColorHint="@color/grey_hint">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white_text"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MISSION OBJECTIVE"
            android:textColor="@color/white_text"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>
            
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/card_surface"
            app:boxStrokeColor="@color/neon_lime"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            android:textColorHint="@color/grey_hint">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etGoal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white_text"
                android:hint="e.g. Buy a Bugatti"
                android:inputType="textCapSentences"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENDER"
            android:textColor="@color/white_text"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbHe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="He/Him"
                android:textColor="@color/white_text"
                android:buttonTint="@color/neon_lime"
                android:paddingEnd="16dp"/>

            <RadioButton
                android:id="@+id/rbShe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="She/Her"
                android:textColor="@color/white_text"
                android:buttonTint="@color/neon_lime"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LANGUAGE"
            android:textColor="@color/white_text"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="true">
            <com.google.android.material.chip.Chip style="@style/NeonChip"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="English" android:tag="en" />
            <com.google.android.material.chip.Chip style="@style/NeonChip"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hindi" android:tag="hindi" />
            <com.google.android.material.chip.Chip style="@style/NeonChip"
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Both" android:tag="both" />
        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/tvSwipeRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe Limit: 20-50"
            android:textColor="@color/neon_lime"
            android:layout_marginTop="24dp"/>
        <com.google.android.material.slider.RangeSlider
            android:id="@+id/sliderSwipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="10" android:valueTo="200" android:stepSize="10"
            app:trackColorActive="@color/neon_lime"
            app:trackColorInactive="@color/card_surface"
            app:thumbColor="@color/neon_lime"/>

        <TextView
            android:id="@+id/tvTimeRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Limit: 5-15 mins"
            android:textColor="@color/neon_lime"
            android:layout_marginTop="16dp"/>
        <com.google.android.material.slider.RangeSlider
            android:id="@+id/sliderTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="2" android:valueTo="60" android:stepSize="1"
            app:trackColorActive="@color/neon_lime"
            app:trackColorInactive="@color/card_surface"
            app:thumbColor="@color/neon_lime"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="NEXT STEP >>"
            android:textColor="@color/black_bg"
            android:backgroundTint="@color/neon_lime"
            app:cornerRadius="12dp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>
</ScrollView>