<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000" 
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/layoutBlockMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="#1A1A1A"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_margin="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACCESS DENIED"
            android:textColor="#FF4444"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are in penalty mode."
            android:textColor="@color/white_text"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="04:59"
            android:textColor="@color/white_text"
            android:textSize="48sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnEmergency"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="EMERGENCY UNLOCK"
            android:textColor="@color/white_text"
            android:backgroundTint="#333333"
            android:textStyle="bold"/>
            
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Requires Shame Protocol)"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutShameInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_bg"
        android:backgroundTint="#1A1A1A"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_margin="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VERIFY WEAKNESS"
            android:textColor="@color/neon_lime"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type this sentence exactly to unlock:"
            android:textColor="@color/grey_hint"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvShameSentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I am weak."
            android:textColor="@color/white_text"
            android:textSize="16sp"
            android:textStyle="italic"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <EditText
            android:id="@+id/etShameInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#333333"
            android:textColor="@color/white_text"
            android:padding="12dp"
            android:hint="Type here..."
            android:textColorHint="#666666"/>

        <Button
            android:id="@+id/btnSubmitShame"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="I ADMIT IT"
            android:textColor="@color/black_bg"
            android:backgroundTint="@color/neon_lime"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>
    </LinearLayout>
</FrameLayout>