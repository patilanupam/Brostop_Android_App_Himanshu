<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6000000" 
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_bg"
        android:orientation="vertical"
        android:padding="24dp"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/neon_lime"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvRoastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textColor="@color/white_text"
            android:textSize="18sp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/tvBonusInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/neon_lime"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnOkay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OKAY, I'M DONE"
            android:backgroundTint="@color/neon_lime"
            android:textColor="@color/black_bg"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/layoutPleaButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="gone"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnPleaNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="QUIT"
                android:backgroundTint="#333333"
                android:textColor="@color/white_text"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnPleaYes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RISK IT ðŸŽ²"
                android:backgroundTint="@color/error_red"
                android:textColor="@color/white_text"/>
        </LinearLayout>

    </LinearLayout>
</FrameLayout>